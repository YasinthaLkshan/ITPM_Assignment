{
  "name": "swift-translator-playwright-tests",
  "version": "1.0.0",
  "description": "IT3040 Assignment 1 - Playwright automation tests for Swift Translator (Singlish to Sinhala)",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "test:chromium": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "install-browsers": "playwright install"
  },
  "keywords": [
    "playwright",
    "testing",
    "automation",
    "swift-translator",
    "singlish",
    "sinhala",
    "typescript",
    "IT3040"
  ],
  "author": "Student",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18"
  }
}